<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gameover"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="10dp"
    tools:ignore="DisableBaselineAlignment">

    <TextView
        android:id="@+id/score_LBL_gameover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/caveat_brush"
        android:text="@string/game_over_title"
        android:textColor="@color/game_over_red"
        android:textSize="100sp"
        android:textStyle="bold"
        android:gravity="center"
        android:singleLine="true"
        android:ellipsize="none"
        android:shadowColor="#80000000"
        android:shadowDx="8"
        android:shadowDy="8"
        android:shadowRadius="12" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="#40FFFFFF"
        app:cardCornerRadius="16dp"
        app:strokeColor="@color/white"
        app:strokeWidth="2dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="30dp"
            android:paddingVertical="12dp"
            android:gravity="center">

            <TextView
                android:id="@+id/score_LBL_finalScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/final_score"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:textStyle="bold" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:orientation="vertical">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/score_BTN_saveScore"
            android:layout_width="280dp"
            android:layout_height="70dp"
            android:layout_marginBottom="12dp"
            android:text="@string/btn_save_score"
            android:textColor="@color/game_over_red"
            android:textSize="20sp"
            android:textStyle="bold"
            app:backgroundTint="#D9FDE085"
            app:cornerRadius="20dp"
            app:strokeColor="#FDE085"
            app:strokeWidth="2dp"
            app:icon="@drawable/ic_save_score"
            app:iconGravity="textStart"
            app:iconSize="30dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/score_BTN_restart"
            android:layout_width="280dp"
            android:layout_height="70dp"
            android:layout_marginBottom="12dp"
            android:text="@string/btn_replay"
            android:textColor="@color/score_green"
            android:textSize="20sp"
            android:textStyle="bold"
            app:backgroundTint="#D9C1E7B6"
            app:cornerRadius="20dp"
            app:strokeColor="#C1E7B6"
            app:strokeWidth="2dp"
            app:icon="@drawable/outline_replay_24"
            app:iconGravity="textStart"
            app:iconSize="30dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/score_BTN_backToHome"
            android:layout_width="280dp"
            android:layout_height="70dp"
            android:text="@string/btn_home"
            android:textColor="@color/home_blue"
            android:textSize="20sp"
            android:textStyle="bold"
            app:backgroundTint="#D981C6F3"
            app:cornerRadius="20dp"
            app:strokeColor="#81C6F3"
            app:strokeWidth="2dp"
            app:icon="@drawable/ic_home"
            app:iconGravity="textStart"
            app:iconSize="30dp" />
    </LinearLayout>
</LinearLayout>